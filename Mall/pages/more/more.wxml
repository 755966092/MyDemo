<view class="flex-wrap flex-direction-row">
	<view class="aside flex-wrap flex-direction-col">
		<block wx:for="{{navList}}">
			<text class="type-nav {{curNav == item.id ? 'selected' : ''}}" bindtap="selectNav" data-index="{{index}}" data-id="{{item.id}}">{{item.name}}</text>
		</block>
	</view>
	<!-- content -->
	<view class="content flex-item">
		<block wx:for="{{dishesList[curIndex]}}">
			<view class="dish flex-wrap flex-direction-row" bindtap="skipPage" data-dish="{{item.id}}" data-price="{{item.price}}">
				<image style="width: 50px; height: 50px;" src="{{item.img}}"></image>
				<view class="flex-item">
					<text class="title">{{item.name}}</text>
					<text class="price">￥{{item.price}}</text>
					<button class="btn" type="default" size="mini"  plain="plain"  bindtap="defaultTap" hover-class="other-button-hover">购买</button>
				</view>
			</view>
		</block>

	</view>

</view>

