.aside{
	width:25%;
	border-right: 1px solid #ddd;
	background: #f5f5f5;
	height:1254rpx;
}
.type-nav{
	position: relative;
	padding:.7rem .3rem;
	text-align: center;
	border-bottom: 1px solid #ddd;
	z-index: 10;
}
.type-nav.selected{
	margin-right: -1px;
	padding-left:-1px;
	color: #333;
	background-color: #fff;
}
.content{
	background-color: #fff;
}
.dish{
	margin-left: 1rem;
	padding: 1rem;
	border-bottom: 1px solid #ddd;
}
.dish .title{
	display: block;
	font-size: 1rem;
	font-weight: bolder;
	margin-bottom: 10px;
}
.dish .price{
	color: red;
	font-size: 1rem;
	font-weight: bolder;
}

image {
	margin-right: 20px;
}
