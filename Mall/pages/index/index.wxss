
.home {
    font-family: "microsoft yahei";
    font-size: 24rpx;
}
/**搜索**/
.home-search input {
    background: #f6f6f6;
    margin: 0 30rpx 15rpx;
    padding: 0 70rpx;
    border-radius: 66rpx;
    height: 66rpx;
    
}
.home-search icon {
    position: absolute;
    left: 50rpx;
    top: 15rpx;
}
/**banner**/
.banner image {
  width: 100%;
  height: 300rpx;
}

/**导航**/
.nav {
    background: #fff;
    padding-top: 30rpx;
    width: 100%;
    flex-wrap: wrap;
    justify-content: center;
}
.nav image {
    width: 100rpx;
    height: 100rpx;
    margin-bottom: 20rpx;
}
.nav-title {
    align-items: center;
    padding: 25rpx 34rpx;
}

.content {
    background: #f6f6f6;
}


/**内容**/
.hot {
    margin-top: 15rpx;
    background: #fff;
}
.hot-title {
    font-size: 30rpx;
    font-weight: 700;
    display: block;
    padding: 30rpx 27.5rpx;

}
.hot-list {
    width: 100%;
    flex-wrap: wrap
}
.hot-info {
    width: 50%;
    margin: 0 27.5rpx;
    padding-bottom: 20rpx;
    
}
.hot-info image{
    width: 320rpx;
    height: 171rpx;
    margin-bottom: 15rpx;
}
.hot-info text {
    font-size: 28rpx;
}
.hot-price {
    color: #FF5C23;
    font-weight: 600;
}
.free-price {
    color: #09BB07;
    font-weight: 600;
    
}
.activity-sale {
    margin-left: 20rpx;
    text-decoration: line-through;
    color: #ccc;
}